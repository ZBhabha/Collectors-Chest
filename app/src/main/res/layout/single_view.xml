<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/browser_actions_bg_grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_single_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/chest" />

        <TextView
            android:id="@+id/textView_single_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="190dp"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Collection Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <TextView
            android:id="@+id/txt_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="190dp"
            android:layout_below="@id/textView_single_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="GOAL: "
            tools:ignore="NotSibling" />
        <TextView
            android:id="@+id/goals_single_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="240dp"
            android:layout_marginTop="54dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:fontFamily="@font/roboto"
            android:gravity="right"
            android:text="10"

            android:textSize="15sp"
            tools:ignore="TextContrastCheck" />
        <ImageView
            android:id="@+id/imageView_arrow"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/ic_blackarrow" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>